@model List<blogapp.Models.User>

<div class="container py-4">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show alert-fade-in" role="alert">
            <i class="fas fa-check-circle"></i>
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    <h2 class="text-center mb-4">📝 Access Requests</h2>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <h4>🎉 No pending requests!</h4>
            <p>All user access requests have been processed.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>👤 Name</th>
                        <th>📧 Email</th>
                        <th>📅 Registered On</th>
                        <th>🔄 Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td><strong>@user.Name</strong></td>
                            <td>@user.Email</td>
                            <td>@user.DateTime.ToString("dd MMM yyyy")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <form method="post" asp-action="ApproveRequest" asp-route-id="@user.Id" class="d-inline">
                                        <button type="submit" class="btn btn-success btn-sm" 
                                                onclick="return confirm('Approve @user.Name\'s access request?')">
                                            ✅ Approve
                                        </button>
                                    </form>
                                    <form method="post" asp-action="RejectRequest" asp-route-id="@user.Id" class="d-inline ms-2">
                                        <button type="submit" class="btn btn-danger btn-sm" 
                                                onclick="return confirm('Reject @user.Name\'s access request?')">
                                            ❌ Reject
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    
    <div class="text-center mt-4">
        <a href="/Admin/Dashboard" class="btn btn-outline-secondary">🏠 Back to Dashboard</a>
    </div>
</div>

@section Styles {
    <style>
        .btn-group .btn {
            margin-right: 5px;
        }
        
        .table th {
            font-weight: 600;
        }
        
        .alert {
            border-radius: 10px;
        }
    </style>
}
