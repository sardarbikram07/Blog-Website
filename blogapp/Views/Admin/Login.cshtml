

@{
    ViewData["Title"] = "Admin Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4 bg-dark bg-opacity-75 text-light p-4">
                <h2 class="text-center mb-4">🔐 Admin Login</h2>

                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-warning text-center">@ViewBag.Message</div>
                }

                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group mb-3">
                        <label for="username">Username</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="Enter username" required />
                    </div>

                    <div class="form-group mb-4">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>
                <div class="text-center mt-3">

                    <a href="/Home/Landing" class="btn btn-secondary ms-2">
                        <i class="fas fa-home me-1"></i>Return to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
